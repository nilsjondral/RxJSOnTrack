{
  "name": "rx-advanced-workshop-exercises",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.2.4",
    "@angular/common": "^4.2.4",
    "@angular/compiler": "^4.2.4",
    "@angular/core": "^4.2.4",
    "@angular/forms": "^4.2.4",
    "@angular/http": "^4.2.4",
    "@angular/platform-browser": "^4.2.4",
    "@angular/platform-browser-dynamic": "^4.2.4",
    "@angular/router": "^4.2.4",
    "core-js": "^2.4.1",
    "jest": "^21.2.1",
    "jest-preset-angular": "^4.0.1",
    "rxjs": "^5.4.2",
    "rxjs-marbles": "^2.1.0",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "1.4.5",
    "@angular/compiler-cli": "^4.2.4",
    "@angular/language-service": "^4.2.4",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/jest": "20.0.8",
    "@types/node": "~6.0.60",
    "codelyzer": "~3.2.0",
    "protractor": "~5.1.2",
    "ts-node": "~3.2.0",
    "tslint": "~5.7.0",
    "typescript": "~2.3.3"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "cobertura",
      "lcov",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.module.ts",
      "!src/**/*.routes.ts",
      "!src/**/*.spec.ts",
      "!src/environments/**",
      "!**/node_modules/**",
      "!node_modules/**",
      "!package.json",
      "!src/polyfills.ts",
      "!src/main.ts",
      "!src/test.ts"
    ],
    "globals": {
      "__TS_CONFIG__": "./tsconfig.jest.json"
    },
    "setupTestFrameworkScriptFile": "./test-bundle.js",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(js|ts)$": "<rootDir>/jest-preprocessor.js"
    },
    "testRegex": "(/src/.*\\.(spec.ts))$"
  }
}
